<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="CustomText"  >
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_widget_title" parent="@style/CustomText">
        <item name="android:textColor">@color/cardview_light_background</item>
    </style>

    <style name="text_widget_info" parent="@style/CustomText">
        <item name="android:textColor">@color/cardview_light_background</item>
    </style>

    <style name="text_detail" parent="Theme.AppCompat">
        <item name="android:layout_marginBottom">@dimen/txt_layout_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/txt_layout_margin_left</item>
        <item name="android:layout_marginRight">@dimen/txt_layout_margin_right</item>
        <item name="android:layout_marginTop">@dimen/txt_layout_margin_top</item>
        <item name="android:lineSpacingMultiplier">@dimen/txt_line_spacing_multiplier
        </item>
        <item name="android:paddingBottom">@dimen/txt_padding_bottom</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/txt_text_size</item>
    </style>

    <style name="fab_detail" parent="Theme.AppCompat">
        <item name="android:layout_marginBottom">@dimen/fab_layout_margin_bottom</item>
        <item name="android:layout_marginRight">@dimen/fab_layout_margin_right</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:src">@drawable/star</item>
    </style>

</resources>
